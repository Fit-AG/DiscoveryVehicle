    </style>

    <style name="PrimaryColoredActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <item name="danger" type="color">#F44336</item>
    <item name="primary" type="color">#03A9F4</item>
    <item name="white" type="color">#ffffff</item>
    <item name="friendly" type="color">#64DD17</item>
    <item name="primaryText" type="color">#de000000</item>
    <item name="primaryLight" type="color">#039BE5</item>
    <item name="disabledOpacity" type="string">0.26</item>
</resources>
